---
import "../styles/global.css";
import { getBackgroundSSR } from "highlighter-core";

const code = `function add(a, b) {
  return a + b;
}

const x = add(1, 2);`;

const { image, size } = getBackgroundSSR(code);
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SSR Demo - High Perf Syntax Highlighter</title>
  </head>
  <body class="bg-slate-800 text-slate-100">
    <main class="mx-auto max-w-5xl p-8">
      <h1 class="mb-2 text-2xl font-semibold">Highlighter Playground</h1>
      <a class="mb-4 inline-block text-indigo-300 underline" href="/">Zur Playground-Seite</a>
      <pre
        class="h-80 w-full rounded border border-indigo-500 bg-no-repeat bg-clip-text font-mono text-transparent caret-white contain-strict [image-rendering:pixelated]"
        style={`background-image:url(${image});background-size:${size};`}
      >{code}</pre>

    </main>
  </body>
</html>
