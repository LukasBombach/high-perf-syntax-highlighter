---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: #1e1e2e;
        color: #cdd6f4;
        min-height: 100vh;
      }
      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }
      h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }
      p {
        color: #a6adc8;
        margin-bottom: 2rem;
        line-height: 1.5;
      }
      a {
        color: #89b4fa;
      }
      nav {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #313244;
      }
    </style>
  </head>
  <body>
    <main>
      <nav>
        <a href="/">Home</a>
        <a href="/ssr">SSR Demo</a>
        <a href="/csr">CSR Demo</a>
      </nav>
      <slot />
    </main>
  </body>
</html>
